<%- include("./partials/header")  %>
<nav class="navbar navbar-dark bg-primary">
    <a class="navbar-brand" href="/">To-do App</a>
</nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter The Task To Be Added">
        <input type="submit" value="Add Todo" class="btn btn-md btn-success mx-2">
    </form>


    <ul class="list-group my-5 ">
        <% todo.forEach(todos => { %>
        <li class="list-group-item"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm">Remove Task</a></li>

        <% }) %>

    </ul>
</div>
